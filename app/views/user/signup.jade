doctype html
html
	head
		title 注册
		meta(http-equiv="Content-Type",content="text/html; charset=utf-8")

		include ../includes/libs.jade
	body
		div.background_div
		.signin_box.signin_box_base
			//- .signin_logo
				i.iconfont.signin_logo_i &#xe600;
			.signin_title
				span 用户注册
			//- form(method="POST", action="javascript:void(0)")
			form(method="POST", action="/signup",id='signin_form')
				.signin_input
					.l_input_div
						input.l_input.form-control#username(type="text",name="user[username]",placeholder="")
						label.l_label 用户名
						span.l_span 请输入用户名
					.l_input_div
						input.l_input.form-control#pwd(type="password",name="user[pwd]",placeholder="")
						label.l_label 密码
						span.l_span 请输入密码
					.l_input_div
						input.l_input.form-control#pwd2(type="password",placeholder="")
						label.l_label 密码
						span.l_span 请再次输入密码
				.signup_button
					a.button.button-primary(href="javascript:signin_up.signup()") 下一步
