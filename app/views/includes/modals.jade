.modal.fade.au_menu(tabindex="-1",role="dialog",aria-labelledby="myModalLabel")
	div(class="modal-dialog",role="document")
		.modal-content
			.modal-header
				button(type="button",class="close",data-dismiss="modal",aria-label="Close")
					i.iconfont.hover_danger.default_color &#xe626
				h4.modal-title 栏目添加/编辑
			.modal-body
				.input-box
					.input-item
						.w-90
							lable.input-attr 执行操作
						.w-220
							input.form-control#menu_todo(type="text",placeholder="1表示添加,2表示修改")
					.input-pro
						.w-90
						.w-220
							span.input-msg 出去干嘛
				.input-box
					.input-item
						.w-90
							lable.input-attr 栏目级别
						.w-220
							input.form-control#menu_rank(type="text",placeholder="1表示一级栏目,2表示二级栏目")
					.input-pro
						.w-90
						.w-220
							span.input-msg
				.input-box
					.input-item
						.w-90
							lable.input-attr 栏目父级ID
						.w-220
							input.form-control#menu_parent(type="text",placeholder="请输入父级id")
					.input-pro
						.w-90
						.w-220
							span.input-msg  
				.input-box
					.input-item
						.w-90
							lable.input-attr 栏目顺序
						.w-220
							input.form-control#menu_order(type="text",placeholder="一级和二级的栏目顺序是分开控制")
					.input-pro
						.w-90
						.w-220
							span.input-msg
				.input-box
					.input-item
						.w-90
							lable.input-attr 栏目名称
						.w-220
							input.form-control#menu_name(type="text",placeholder="请输入栏目名称")
					.input-pro
						.w-90
						.w-220
							span.input-msg
				.input-box
					.input-item
						.w-90
							lable.input-attr 栏目图标
						.w-220
							input.form-control#menu_icon(type="text",placeholder="请输入对应图标的代码")
					.input-pro
						.w-90
						.w-220
							span.input-msg
				.input-box
					.input-item
						.w-90
							lable.input-attr 连接地址
						.w-220
							input.form-control#menu_url(type="text",placeholder="请输入点击栏目后的请求跳转路径")
					.input-pro
						.w-90
						.w-220
							span.input-msg
				
			.modal-footer
				//- button(type="button",class="btn btn-default",data-dismiss="modal") 关闭
				button(type="button",class="button button-primary button-small",data-dismiss="modal",onclick="menu.auMenus()") 提交